{% extends 'base.html.twig' %}

{% block title %}Créer un Projet{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #74ebd5, #acb6e5);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: Arial, sans-serif;
        }
        .project-form-container {
            background: #fff;
            padding: 2.5rem;
            border-radius: 10px;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            max-width: 420px;
            width: 100%;
            margin: auto;
        }
        .project-form-container h1 {
            color: #333;
            font-size: 1.8rem;
            margin-bottom: 1.5rem;
            font-weight: bold;
        }
        .form-control {
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            padding: 0.8rem;
        }
        .btn-primary {
            background-color: #74ebd5;
            border: none;
            color: #fff;
            padding: 0.8rem;
            border-radius: 8px;
            font-weight: 600;
            margin-top: 1rem;
            width: 100%;
        }
        .btn-primary:hover {
            background-color: #4cb1c9;
        }
    </style>
{% endblock %}

{% block body %}
<div class="project-form-container">
    <h1>Créer un Projet</h1>

    <form method="POST" action="{{ path('projet_create') }}">
        <div class="form-group mb-3">
            <label for="titre" class="form-label">Titre</label>
            <input type="text" class="form-control" id="titre" name="titre" placeholder="Titre du projet" required>
        </div>
        <div class="form-group mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" name="description" placeholder="Description du projet" required></textarea>
        </div>
        <div class="form-group mb-3">
            <label for="societeId" class="form-label">ID Société</label>
            <input type="number" class="form-control" id="societeId" name="societeId" placeholder="ID de la société" required>
        </div>
        <button type="submit" class="btn btn-primary">Créer</button>
    </form>
</div>
{% endblock %}
