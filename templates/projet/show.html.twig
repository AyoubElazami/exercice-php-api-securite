{% extends 'base.html.twig' %}

{% block title %}Détails du Projet{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #74ebd5, #acb6e5);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: Arial, sans-serif;
        }
        .project-details-container {
            background: #fff;
            padding: 2.5rem;
            border-radius: 10px;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            max-width: 720px;
            width: 100%;
            margin: auto;
        }
        .project-details-container h1 {
            color: #333;
            font-size: 2rem;
            margin-bottom: 1.5rem;
        }
        .btn-primary {
            background-color: #74ebd5;
            border: none;
            color: #fff;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-weight: 600;
        }
        .btn-primary:hover {
            background-color: #4cb1c9;
        }
    </style>
{% endblock %}

{% block body %}
<div class="project-details-container">
    <h1>{{ projet.titre }}</h1>
    <p><strong>Description:</strong> {{ projet.description }}</p>
    <p><strong>Date de création:</strong> {{ projet.dateCreation|date('d/m/Y') }}</p>
    <p><strong>Société:</strong> {{ projet.societe.nom }}</p>

    <a href="{{ path('projet_list_page') }}" class="btn btn-primary">Retour à la liste</a>
</div>
{% endblock %}
