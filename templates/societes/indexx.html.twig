{# templates/societe/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des Sociétés{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #74ebd5, #acb6e5);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: Arial, sans-serif;
        }
        .societe-container {
            background: #fff;
            padding: 2.5rem;
            border-radius: 10px;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            max-width: 900px;
            width: 100%;
            margin: auto;
            text-align: center;
        }
        .societe-container h1 {
            color: #333;
            font-size: 1.8rem;
            margin-bottom: 1.5rem;
            font-weight: bold;
        }
        table {
            width: 100%;
            margin-bottom: 1.5rem;
            border-collapse: collapse;
        }
        th, td {
            padding: 1rem;
            text-align: left;
            border-bottom: 1px solid #e0e0e0;
        }
        th {
            background-color: #74ebd5;
            color: #fff;
        }
        tr:hover {
            background-color: #f7f9fc;
        }
        .btn-primary {
            background-color: #74ebd5;
            border: none;
            color: #fff;
            font-size: 1rem;
            font-weight: 600;
            padding: 0.8rem 1.5rem;
            border-radius: 8px;
            transition: background 0.3s ease;
        }
        .btn-primary:hover {
            background-color: #4cb1c9;
        }
    </style>
{% endblock %}

{% block body %}
<div class="societe-container">
    <h1>Liste des Sociétés</h1>

    {# Affichage des messages flash #}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Siret</th>
                <th>Adresse</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for societe in societes %}
                <tr>
                    <td>{{ societe.nom }}</td>
                    <td>{{ societe.siret }}</td>
                    <td>{{ societe.adresse }}</td>
                    <td>
                        <a href="{{ path('societe_list_page', {id: societe.id}) }}" class="btn btn-primary">Voir</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
